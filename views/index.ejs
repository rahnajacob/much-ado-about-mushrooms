<body>
    <%- include('./partials/_navbar.ejs') %>
        <%- include('./partials/_sidebar.ejs') %>
            <h1>Much Ado About Mushrooms</h1>
            <h3>A website that has information on a few of these little dudes!</h3>
            <div id="mushDisplay">
                <%mushToDisplay = mushrooms[Math.floor(Math.random() * mushrooms.length)]%>
                <p><%mushToDisplay.sciName%></p>
                    <p>Common name: <%=mushToDisplay.comName%>
                    </p>
                    <img class="mushroom-show" src="<%=mushToDisplay.image%>" alt="An image of <%=mushToDisplay.comName%>" />
                    <p>Description: <%=mushToDisplay.description%>
                    </p>
                    <button type="button"><a href="/mushrooms">View index</a></button>
            </div>
</body>

